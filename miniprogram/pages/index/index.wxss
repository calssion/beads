/* pages/index/index.wxss */

.container {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  color: #888;
  font-size: 26rpx;
}

/* ---------- 上传区 ---------- */
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 240rpx;
  border: 3rpx dashed #bbb;
  border-radius: 20rpx;
  background: #fff;
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.upload-area text {
  color: #888;
  font-size: 28rpx;
}

.preview-thumb {
  width: 300rpx;
  height: 300rpx;
  border-radius: 8rpx;
}

.file-info {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #666;
}

/* ---------- 设置面板 ---------- */
.settings {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.setting-row {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.setting-label {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 8rpx;
}

.setting-input {
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  padding: 14rpx 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.picker-value {
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  padding: 14rpx 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  color: #333;
}

.btn-generate {
  margin-top: 10rpx;
  background: #4a90d9 !important;
  color: #fff !important;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-generate[disabled] {
  background: #b0c4de !important;
  color: rgba(255,255,255,0.7) !important;
}

/* ---------- 尺寸说明 ---------- */
.bead-info {
  background: #f0f7ff;
  border-left: 8rpx solid #4a90d9;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #444;
}

/* ---------- 区块 ---------- */
.section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

/* ---------- 缩略图预览 ---------- */
.thumbnail-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 16rpx;
}

.thumbnail-img {
  width: 100%;
  max-height: 600rpx;
  border-radius: 8rpx;
}

/* ---------- Canvas 滚动区 ---------- */
.canvas-scroll {
  width: 100%;
  height: 900rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  overflow: hidden;
}

/* ---------- 操作按钮 ---------- */
.action-bar {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.btn-download,
.btn-export {
  flex: 1;
  font-size: 28rpx;
  border: none;
  border-radius: 16rpx;
  color: #fff !important;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.btn-download {
  background: #27ae60 !important;
}

.btn-export {
  background: #3498db !important;
}

/* ---------- 统计表格 ---------- */
.stats-table {
  font-size: 24rpx;
}

.stats-header {
  display: flex;
  background: #f0f0f0;
  padding: 12rpx 0;
  font-weight: bold;
  border-bottom: 2rpx solid #ddd;
}

.stats-row {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.stats-row-alt {
  background: #fafafa;
}

.col-num    { width: 70rpx;  text-align: center; }
.col-swatch { width: 70rpx;  display: flex; justify-content: center; align-items: center; }
.col-id     { width: 100rpx; text-align: center; }
.col-hex    { width: 150rpx; text-align: center; font-size: 22rpx; }
.col-count  { width: 110rpx; text-align: center; }
.col-pct    { flex: 1;       text-align: center; }

.bold { font-weight: bold; }

.swatch {
  width: 36rpx;
  height: 36rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ccc;
}
